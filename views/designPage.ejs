<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Page Design</title>
    <!-- Include Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <!-- Include Quill stylesheet -->
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
</head>

<body class="bg-gray-100 p-4">
    <h1 class="text-3xl mb-4">New Page</h1>

    <form id="designForm" action="/designPage" method="post">
        <div class="mb-4">
            <label for="Chapter" class="block">Chapter</label>
            <select id="Chapter" name="chapter" class="block w-full border rounded py-2 px-3">
                <option value="default">Default</option>
                <option value="template1">Template 1</option>
                <option value="template2">Template 2</option>
            </select>
        </div>
        <div id="editor" class="bg-white p-4 rounded">
            <h1 class="text-2xl mb-2">Welcome to the Page Editor</h1>
            <div id="quillEditor" style="min-height: 200px;"></div>
            <!-- Hidden input field to store Quill editor content -->
            <input type="hidden" id="editorContent" name="editorContent">
        </div>
        <button type="submit"
            class="mt-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Submit</button>
    </form>

    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

    <script>
        var quill = new Quill('#quillEditor', {
            theme: 'snow'
        });

        document.getElementById('designForm').addEventListener('submit', function (event) {
            document.getElementById('editorContent').value = quill.root.innerHTML;
        });
    </script>
</body>

</html>