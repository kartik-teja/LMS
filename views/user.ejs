<!DOCTYPE html>
<html lang="en">

<head>
    <title>
        Next Move
    </title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/looks/output.css" rel="stylesheet">
</head>

<body>
    <h1>Welcome </h1>
    <p>The following courses are available. Pick what you would like to learn today!</p>
</body>
<div>
    <% if (courses && courses.length> 0) { %>
        <% courses.forEach(course=> { %>
            <div class="bg-white p-6 rounded-lg shadow-md cursor-pointer"
                onclick="window.location.href='/viewCourseU?courseName=<%= encodeURIComponent(course.name) %>&courseId=<%= course.id %>'">
                <h2 class="text-xl text-gray-900 font-semibold mb-2">
                    <%= course.name %>
                </h2>
                <p class="text-gray-700 mb-4">Registered Users Count: <%= course.registeredUsersCount %>
                </p>
                <p class="text-gray-700">Number of Chapters: <%= course.chapters.length %>
                </p>
            </div>
            <% }); %>
                <% } else { %>
                    <p>No courses available</p>
                    <% } %>
</div>

</html>